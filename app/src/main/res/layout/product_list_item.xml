<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/margin_product_card_view">

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="@dimen/padding_product_card_view">

        <TextView
            android:id="@+id/tv_product_item_name"
            style="@style/ProductItemNameTextViewStyle"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="Nutella" />

        <TextView
            android:id="@+id/tv_product_item_barcode"
            style="@style/ProductItemBarcodeTextViewStyle"
            app:layout_constraintStart_toStartOf="@+id/tv_product_item_name"
            app:layout_constraintTop_toBottomOf="@+id/tv_product_item_name"
            tools:text="3017620429484" />

    </android.support.constraint.ConstraintLayout>
</android.support.v7.widget.CardView>